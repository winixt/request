{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES2016",
        "module": "esnext",
        "moduleResolution": "node",
        "allowJs": false,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "declaration": true,
        "newLine": "LF",
        "lib": [
            "esnext",
            "dom",
        ]
    },
    "include": [
        "./src/*"
    ]
}